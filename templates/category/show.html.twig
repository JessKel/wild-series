{% extends 'base.html.twig' %}

{% block title %}Categorie #{{ category.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Catégorie : {{ category.name }}</h1>
        <h5 class="retour" style="text-align:center"><a href="{{ path('app_index') }}">Retour à l'accueil</a></h5>
        <div class="row justify-content-center">
            {% for singleProgram in program %}
                <div class="col-md-3 mb-4">
                    <div class="card category_card">
                    <img class="card-img-top" src="{{ asset(singleProgram.poster) }}" alt="{{ singleProgram.title }} poster" style="height:400px">
                        <div class="card-body body_category">
                            <h4 class="card-title" style="text-align:center">
                                {{ singleProgram.id }} . {{ singleProgram.title }}
                            </h4>
                            <p>
                                <h6 style="text-align:center">Synopsis : </h6>{{ singleProgram.synopsis }}
                            </p>
                            <a href="{{ path("program_show", { programSlug: singleProgram.slug }) }}" style="align-item:center">Voir la série</a>
                            </br>
                            <a href="{{ path('category_index') }}">Retour à la liste des catégories</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}