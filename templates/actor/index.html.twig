{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
<div class="container">
<h1>Actor index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picture</th>
                <th>UpdatedAt</th>
                <th>Show/Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>{{ actor.picture }}</td>
                <td>{{ actor.updatedAt ? actor.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('actor_show', {'id': actor.id}) }}">Show</a>
                    <a href="{{ path('actor_edit', {'id': actor.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('actor_new') }}">Create new</a>
</div>
{% endblock %}
